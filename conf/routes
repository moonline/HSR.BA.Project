# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Assets.at(path="/public", file="index.html")

GET     /api/documentation          	@controllers.docs.DocumentationController.getAPIDocumentation()

POST	/user/logout					@controllers.user.UserController.logout()
POST	/user/login						@controllers.user.UserController.login()
GET		/user/loginStatus				@controllers.user.UserController.loginStatus()
POST	/user/register					@controllers.user.UserController.register()
POST	/user/changePassword			@controllers.user.UserController.changePassword()

GET		/ppt							@controllers.ppt.ProjectPlanningToolController.readAll()
GET		/ppt/$id<[0-9]+>				@controllers.ppt.ProjectPlanningToolController.read(id: Long)
POST	/ppt/sendToPPT					@controllers.ppt.ProjectPlanningToolController.sendToPPT()
POST	/ppt/createPPTTask				@controllers.ppt.ProjectPlanningToolController.createPPTTask()

POST	/dks							@controllers.dks.DecisionKnowledgeSystemController.create()
GET		/dks							@controllers.dks.DecisionKnowledgeSystemController.readAll()
GET		/dks/$id<[0-9]+>				@controllers.dks.DecisionKnowledgeSystemController.read(id: Long)
POST	/dks/$id<[0-9]+>				@controllers.dks.DecisionKnowledgeSystemController.update(id: Long)
DELETE	/dks/$id<[0-9]+>				@controllers.dks.DecisionKnowledgeSystemController.delete(id: Long)
POST	/dks/$id<[0-9]+>/delete			@controllers.dks.DecisionKnowledgeSystemController.delete(id: Long)
GET		/dks/getFromDKS					@controllers.dks.DecisionKnowledgeSystemController.getFromDKS(url: String)

GET		/project						@controllers.user.ProjectController.readAll()
GET		/project/$id<[0-9]+>			@controllers.user.ProjectController.read(id: Long)

POST	/user/pptAccount				@controllers.user.PPTAccountController.create()
GET		/user/pptAccount				@controllers.user.PPTAccountController.readAll()
GET		/user/pptAccount/$id<[0-9]+>	@controllers.user.PPTAccountController.read(id: Long)
POST	/user/pptAccount/$id<[0-9]+>	@controllers.user.PPTAccountController.update(id: Long)
DELETE	/user/pptAccount/$id<[0-9]+>	@controllers.user.PPTAccountController.delete(id: Long)
POST	/user/pptAccount/$id<[0-9]+>/delete	@controllers.user.PPTAccountController.delete(id: Long)

POST	/taskTemplate					@controllers.task.TaskTemplateController.create()
GET		/taskTemplate					@controllers.task.TaskTemplateController.readAll()
GET		/taskTemplate/$id<[0-9]+>		@controllers.task.TaskTemplateController.read(id: Long)
POST	/taskTemplate/$id<[0-9]+>		@controllers.task.TaskTemplateController.update(id: Long)
DELETE	/taskTemplate/$id<[0-9]+>		@controllers.task.TaskTemplateController.delete(id: Long)
POST	/taskTemplate/$id<[0-9]+>/delete		@controllers.task.TaskTemplateController.delete(id: Long)
POST	/taskTemplate/$id<[0-9]+>/addProperty	@controllers.task.TaskTemplateController.addProperty(id: Long)
POST	/taskTemplate/$taskTemplate<[0-9]+>/properties/$id<[0-9]+>			@controllers.task.TaskTemplateController.updateProperty(id: Long, taskTemplate: Long)
POST	/taskTemplate/$taskTemplate<[0-9]+>/properties/$id<[0-9]+>/delete	@controllers.task.TaskTemplateController.deleteProperty(id: Long, taskTemplate: Long)

POST	/dksMapping						@controllers.dks.DecisionKnowledgeSystemMappingController.create()
GET		/dksMapping						@controllers.dks.DecisionKnowledgeSystemMappingController.readAll()
GET		/dksMapping/byDKSNode/:dksNode	@controllers.dks.DecisionKnowledgeSystemMappingController.readByDKSNode(dksNode: String)
GET		/dksMapping/$id<[0-9]+>			@controllers.dks.DecisionKnowledgeSystemMappingController.read(id: Long)
POST	/dksMapping/$id<[0-9]+>			@controllers.dks.DecisionKnowledgeSystemMappingController.update(id: Long)
DELETE	/dksMapping/$id<[0-9]+>			@controllers.dks.DecisionKnowledgeSystemMappingController.delete(id: Long)
POST	/dksMapping/$id<[0-9]+>/delete	@controllers.dks.DecisionKnowledgeSystemMappingController.delete(id: Long)

POST	/requestTemplate				@controllers.ppt.RequestTemplateController.create()
GET		/requestTemplate				@controllers.ppt.RequestTemplateController.readAll()
GET		/requestTemplate/$id<[0-9]+>	@controllers.ppt.RequestTemplateController.read(id: Long)
POST	/requestTemplate/$id<[0-9]+>	@controllers.ppt.RequestTemplateController.update(id: Long)
DELETE	/requestTemplate/$id<[0-9]+>	@controllers.ppt.RequestTemplateController.delete(id: Long)
POST	/requestTemplate/$id<[0-9]+>/delete	@controllers.ppt.RequestTemplateController.delete(id: Long)

POST	/processor						@controllers.ppt.ProcessorController.create()
GET		/processor						@controllers.ppt.ProcessorController.readAll()
GET		/processor/$id<[0-9]+>			@controllers.ppt.ProcessorController.read(id: Long)
POST	/processor/$id<[0-9]+>			@controllers.ppt.ProcessorController.update(id: Long)
DELETE	/processor/$id<[0-9]+>			@controllers.ppt.ProcessorController.delete(id: Long)
POST	/processor/$id<[0-9]+>/delete	@controllers.ppt.ProcessorController.delete(id: Long)

POST	/taskProperty					@controllers.task.TaskPropertyController.create()
GET		/taskProperty					@controllers.task.TaskPropertyController.readAll()
GET		/taskProperty/$id<[0-9]+>		@controllers.task.TaskPropertyController.read(id: Long)
POST	/taskProperty/$id<[0-9]+>		@controllers.task.TaskPropertyController.update(id: Long)
DELETE	/taskProperty/$id<[0-9]+>		@controllers.task.TaskPropertyController.delete(id: Long)
POST	/taskProperty/$id<[0-9]+>/delete	@controllers.task.TaskPropertyController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /public/*file               controllers.Assets.at(path="/public", file)
